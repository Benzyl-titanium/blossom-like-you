{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": "."
  },
  "include": [
    "docs/**/*.ts",
    "docs/**/*.mts",
    "docs/.vitepress/**/*",
    "vite.config.ts",
    "vite.config.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}
